{
    "name": "sb15/dom",
    "type": "library",
    "description": "Simple dom wrapper",
    "keywords": ["browser"],
    "homepage": "https://github.com/sb15/dom",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Perov",
            "email": "alex@sb6.ru"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sb\\": "src"
        }
    },
    "require": {
        "ext-mbstring": "*",
        "simplehtmldom/simplehtmldom": "2.0.0",
        "guzzlehttp/psr7": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7.0"
    },
    "repositories": [
        {
            "type":"package",
            "package": {
                "name": "simplehtmldom/simplehtmldom",
                "version": "2.0.0",
                "source": {
                    "type":"git",
                    "url":"https://github.com/simplehtmldom/simplehtmldom.git",
                    "reference": "tags/2.0-RC2"
                },
                "autoload": {
                    "classmap": [
                        "./"
                    ],
                    "exclude-from-classmap": [
                        "/example/",
                        "/manual/",
                        "/testcase/",
                        "/tests/",
                        "simple_html_dom.php"
                    ]
                },
                "target-dir": "simplehtmldom/simplehtmldom"
            }
        }
    ]

}
